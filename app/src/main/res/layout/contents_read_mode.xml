<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/editModeButton"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:backgroundTint="#FFFFFF"
        android:contentDescription="해당 단어장에서 수정 모드로 전환합니다."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007"
        app:srcCompat="@android:drawable/ic_menu_manage" />

    <EditText
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:singleLine="true"
        android:text="기본"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016" />

    <include
        layout="@layout/contents_category"
        android:id="@+id/category0"
        android:visibility="visible"/>
    <include
        layout="@layout/contents_category"
        android:id="@+id/category1"
        android:visibility="invisible"/>
    <include
        layout="@layout/contents_category"
        android:id="@+id/category2"
        android:visibility="invisible"/>
    <include
        layout="@layout/contents_category"
        android:id="@+id/category3"
        android:visibility="invisible"/>
    <include
        layout="@layout/contents_category"
        android:id="@+id/category4"
        android:visibility="invisible"/>
    <include
        layout="@layout/contents_category"
        android:id="@+id/category5"
        android:visibility="invisible"/>
    <include
        layout="@layout/contents_category"
        android:id="@+id/category6"
        android:visibility="invisible"/>
    <include
        layout="@layout/contents_category"
        android:id="@+id/category7"
        android:visibility="invisible"/>
    <include
        layout="@layout/contents_category"
        android:id="@+id/category8"
        android:visibility="invisible"/>
    <include
        layout="@layout/contents_category"
        android:id="@+id/category9"
        android:visibility="invisible"/>

    <include
        android:id="@+id/category10"
        layout="@layout/contents_category"
        android:visibility="invisible"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-2855738020149418/5447051267"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>