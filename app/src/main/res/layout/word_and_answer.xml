<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/wordAndAnswerEdit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/wordEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/editModeMarginSide"
        android:layout_marginEnd="@dimen/editModeWordMarginMiddle"
        android:background="@drawable/word_front_background"
        android:ems="10"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/font1"
        android:textColor="@color/black"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/answerEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/editModeAnswerMarginMiddle"
        android:layout_marginEnd="@dimen/editModeMarginSide"
        android:layout_gravity="center"
        android:background="@drawable/word_back_background"
        android:ems="10"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/font2"
        android:textColor="@color/black"
        android:singleLine="true"/>

</LinearLayout>